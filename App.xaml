<Application x:Class="WPFEffects.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:CustomFrms="clr-namespace:WPFEffects.Core.CustomFrms"
             xmlns:local="clr-namespace:WPFEffects"
             StartupUri="MainWindow.xaml" Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/PathDatas.xaml"/>
                <ResourceDictionary Source="Resources/ScrollViewerStyle.xaml"/>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="ColorBrush.LightWhite" Color="#19FFFFFF"/>
                    <SolidColorBrush x:Key="ColorBrush.MiddleWhite" Color="#FFCCCCCC"/>

                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontFamily" Value="/WPFEffects;component/Fonts/#Cabourg OT Bold"/>
                    </Style>

                    <ImageBrush x:Key="Brush.MyShop" ImageSource="Assets/MyShop.png"/>
                    <ImageBrush x:Key="Brush.Test" ImageSource="Assets/D1.jpg"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
       
    </Application.Resources>
</Application>
